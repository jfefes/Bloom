<%= link_to 'Back to Admin', admin_path, class: "btn btn-danger" %>

<p id="notice"><%= notice %></p>

<h1>Listing articles</h1>

  <div class="row">
    <div class="col-sm-2">
      <h3>Title</h3>
    </div>
    <div class="col-sm-3">
      <h3>Content</h3>
    </div>
  </div>

  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-sm-2">
        <div class="well">
          <%= article.title %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="well">
          <%= raw article.text.truncate_words(10) %>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="well">
          <%= link_to image_tag(article.image_link, class: "img-responsive"), article.image_link %>
        </div>
      </div>
      <div class="col-sm-1">
        <%= link_to 'Show', '/blog/' + article.slug, class:"btn btn-primary" %>
      </div>

      <div class="col-sm-1">
        <%= link_to 'Edit', edit_article_path(article), class:"btn btn-default" %>
      </div>


      <div class="col-sm-1">
        <%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      class: "btn btn-danger",
                      data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <hr>
  <% end %>

